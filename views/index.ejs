<%- include("partials/header.ejs") %>
<div class="list-title container justify-content-around">
  <% if (locals.today && locals.month) { %>
    <h1>To-Do List</h1>
    <h2><%=today%>, <%=month%> <%=new Date().getDate()%></h2>
  <% } %>
</div>
<!-- Outer container for the list -->
<div class="list-display container align-content-start">
  <% if (locals.toDoList) { %>
    <% for (var i = 0; i < toDoList.length; i++) { %>
      <!-- This is the individual list box -->
      <div class="list-group container col-4">
        <label class="list-group-item d-flex gap-3 text-dark">
          <input class="form-check-input flex-shrink-0" type="checkbox" value="" style="font-size: 1.375em;">
          <span class="pt-1 form-checked-content">
            <h5><%= toDoList[i]%></h5>
          </span>
        </label>
        
        
      </div>
    <% } %>
  <% } %>
  <!-- Add task action is done using this form -->
    <form action="/addtask" method="POST" class="form-input-div container col-4">
      <div class="input-field-div  py-3">
        <input type="text" name="list-item" class = "form-control " placeholder="Type something & press â†µ Enter">
      </div>
      <div class="btn-div">
        <a  href="/"> <button type="submit" name="list" class="btn btn-outline-dark rounded-pill px-3"><i class="fa-solid fa-plus add-icon"></i></button></a>
      </div>
    </form>
</div>

<%- include('partials/footer.ejs') %>